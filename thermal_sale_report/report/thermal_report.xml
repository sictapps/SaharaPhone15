<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_report_print_thermal_so" model="ir.actions.report">
        <field name="name">Thermal Invoice</field>
        <field name="model">account.move</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">thermal_sale_report.report_thermal</field>
        <field name="report_file">thermal_sale_report.report_thermal</field>
        <field name="print_report_name">(object._get_report_base_filename())</field>
        <field name="binding_model_id" ref="account.model_account_move"/>
        <field name="binding_type">report</field>
        <field name="paperformat_id" ref="paperformat_thermal_paper"/>
    </record>


    <template id="report_thermal">
        <t t-call="web.html_container">
            <t t-call="web.basic_layout">
                <t t-foreach="docs" t-as="doc">

                    <link rel="stylesheet" href="/thermal_sale_report/static/src/css/thermal_style.css"/>

                    <center class="thermal-report-page">
                        <div class="my_container">

                            <div class="my_section">

                                <div class="detail_section">
                                    <span t-field="doc.partner_id"/>
                                    <br/>
                                    <span t-field="doc.invoice_date"/>

                                </div>

                            </div>


                            <table class=" table my_product_table">

                                <tbody>
                                    <tr>
                                        <td>
                                            <b>PRODUCT</b>
                                        </td>
                                        <td>
                                            <b>QTY</b>
                                        </td>
                                        <td>
                                            <b>PRICE</b>
                                        </td>
                                    </tr>
                                    <tr t-foreach="doc.invoice_line_ids" t-as="a">
                                        <td>
                                            <span t-field="a.name"/>
                                            <br/>
                                        </td>
                                        <td>
                                            <span t-field="a.quantity"/>
                                        </td>
                                        <td>
                                            <span t-field="a.price_unit"
                                                  t-options="{'widget': 'monetary', 'display_currency': doc.currency_id}"/>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>

                            <center style="width:90%;">

                                <table class="my_table">
                                    <tbody>
                                        <tr>

                                            <t t-set="tax_totals" t-value="json.loads(doc.tax_totals_json)"/>
<!--                                            <t t-foreach="tax_totals['subtotals']" t-as="subtotal">-->
<!--                                                <tr class="border-black o_subtotal">-->
<!--                                                    <td>-->
<!--                                                        <strong t-esc="subtotal['name']"/>-->
<!--                                                    </td>-->

<!--                                                    <td class="text-right">-->
<!--                                                        <span-->
<!--                                                                t-att-class="oe_subtotal_footer_separator"-->
<!--                                                                t-esc="subtotal['formatted_amount']"-->
<!--                                                        />-->
<!--                                                    </td>-->
<!--                                                </tr>-->

<!--                                                <t t-set="subtotal_to_show" t-value="subtotal['name']"/>-->
<!--                                                <t t-call="account.tax_groups_totals"/>-->
<!--                                            </t>-->
                                        </tr>

                                        <tr class="border-black o_total">
                                            <td>
                                                <strong>Total</strong>
                                            </td>
                                            <td class="text-right">
                                                <span t-esc="tax_totals['formatted_amount_total']"/>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </center>

                            <br/>
                            <!--<center>-->
                            <!--    Thank You For Shopping With Us-->
                            <!--</center>-->

                        </div>
                    </center>
                </t>
            </t>
        </t>
    </template>


</odoo>