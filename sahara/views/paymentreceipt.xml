<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_payment_receipt_document_sahara">
            <t t-call="web.external_layout">
             <!-- <t t-call="sahara.custom_receipt_layout"> -->
                <div>
                    <h1 style="border-bottom: 2px dotted black;">Sahara Phone L.L.C</h1>
                </div>
                <t t-set="o" t-value="o.with_context(lang=lang)"/>
                <h3><strong>Receipt Voucher</strong></h3>
                <table class="page">
                    <tr>
                        <td style="width:200px">
                            Date:
                        </td>
                        <td style="width:200px">
                            <span t-field="o.date"/>
                        </td>
                    </tr>
                    <tr>
                        <td style="width:200px">
                            Receipt Number:
                        </td>
                        <td style="width:200px">
                            <span t-field="o.name"/>
                        </td>
                    </tr>
                    <tr>
                        <td style="width:200px">
                            <t t-if="o.partner_type == 'customer'">
                                    Receipt From Mr:
                                </t>
                                <t t-if="o.partner_type == 'supplier'">
                                    Vendor:
                                </t>
                        </td>
                        <td style="width:200px">
                             <span t-field="o.partner_id"/>
                        </td>
                    </tr>
                     <tr>
                        <td style="width:200px">
                            The Sum Of Dhs:
                        </td>
                        <td style="width:200px">
                            <span t-field="o.amount" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/>
                        </td>
                    </tr>
                    <tr>
                        <td style="width:200px">
                            Note:
                        </td>
                        <td style="width:200px">
                            <span t-field="o.ref"/>
                        </td>
                    </tr>
                    <tr>
                        <td style="height:15px"></td>
                        <td style="height:15px"></td>
                    </tr>
                    <tr>
                        <td style="width:200px">
                           
                        </td>
                        <td style="width:200px">
                            Receiver's Sign
                        </td>
                    </tr>
                    <tr>
                        <td style="height:30px"></td>
                        <td style="height:30px"></td>
                    </tr>
                    <tr>
                        <td style="width:200px;font-size:10px;">
                            Phone: <span t-field="o.company_id.phone"/>
                            PO.Box:<span t-field="o.company_id.zip"/>
                        </td>
                         <td style="width:200px;font-size:10px;">
                            <span t-field="o.company_id.state_id"/>
                            <span t-field="o.company_id.email"/>
                        </td>
                    </tr>
                </table>
            </t>
        </template>

        <template id="report_payment_receipt">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-set="lang" t-value="o.partner_id.lang or o.company_id.partner_id.lang"/>
                    <t t-call="sahara.report_payment_receipt_document" t-lang="lang"/>
                </t>
            </t>
        </template>
    </data>
</odoo>



