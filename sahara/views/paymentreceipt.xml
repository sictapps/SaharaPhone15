<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_payment_receipt_document_sahara">
            <t t-call="web.external_layout">
             <!-- <t t-call="sahara.custom_receipt_layout"> -->
                <div>
                    <h1>Sahara Phone L.L.C</h1>
                </div>
                <t t-set="o" t-value="o.with_context(lang=lang)"/>
                <div class="page">
                    <h3><strong>Receipt Voucher</strong></h3>
                    <div class="mb-4 mt-3">
                        <div class="row">
                            <div class="col-6" t-if="o.date">
                                Date: <span t-field="o.date"/>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-6">
                                Receipt Number: <span t-field="o.name"/>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-6" t-if="o.partner_type">
                                <t t-if="o.partner_type == 'customer'">
                                    Receipt From Mr:
                                </t>
                                <t t-if="o.partner_type == 'supplier'">
                                    Vendor:
                                </t><span t-field="o.partner_id"/>
                            </div>
                            <!-- <div class="col-6" t-if="o.payment_method_id">
                                Payment Method: <span t-field="o.payment_method_id.name"/>
                            </div> -->
                        </div>
                        <div class="row">
                            <div class="col-6" t-if="o.amount">
                                The Sum Of Dhs: <span t-field="o.amount" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-6" t-if="o.ref">
                                Note: <span t-field="o.ref"/>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-6" style="text-align: right">
                                Receiver's Sign
                            </div>
                        </div>
                    </div>
                </div>
            </t>
        </template>

        <template id="report_payment_receipt">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-set="lang" t-value="o.partner_id.lang or o.company_id.partner_id.lang"/>
                    <t t-call="sahara.report_payment_receipt_document" t-lang="lang"/>
                </t>
            </t>
        </template>
    </data>
</odoo>



