<?xml version='1.0' encoding='utf-8'?>
<openerp>
    <data>
        <template id="sahara.your_custom_layout_header">
            <div class="article o_report_layout_standard" t-att-data-oe-model="o and o._name"
                 t-att-data-oe-id="o and o.id">
                <t t-call="web.address_layout"/>
                <t t-raw="0"/>
            </div>
            <div class="header">
                <h3 style="align:center; text-align: center;font-family: 'cool_font';margin-top:0px;font-size:20px;font-weight: bold;">
                    فاتورة ضريبة
                </h3>
                <h3 style="align:center; text-align: center;font-family: 'cool_font';margin-top:0px;font-size:20px;font-weight: bold;">
                    TAX Invoice
                </h3>
                <div class="row">
                    <div class="col-xs-3">

                        <table style="width: 100%;">
                            <tr>
                                <td>
                                    <p style="font-family: 'cool_font';color:#8C001A;font-size:25px;" class="m-0"
                                       t-field="o.company_id.name"/>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <span t-field="o.company_id.street"/>
                                    <span t-field="o.company_id.city"/>
                                    <span t-field="o.company_id.state_id"/>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    TRN:
                                    <span class="m-0" t-field="o.company_id.company_registry"/>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    Tel:
                                    <span class="m-0"
                                          t-field="o.company_id.phone"/>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    PO Box:
                                    <span class="m-0" t-field="o.company_id.zip"/>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    Mail:
                                    <span class="m-0" t-field="o.company_id.email"/>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    Web:
                                </td>
                            </tr>
                        </table>
                    </div>
                    <div class="col-xs-6">
                        <div style="width: 400px;float:right;">
                            <span style="color:white;">mmmmm</span>
                        </div>
                    </div>
                    <div class="col-xs-3">
                        <div style="width: 100%;float:right;margin-top:0px;margin-right:-150px;">
                            <div style="width: 45%;float:right;">
                                <img t-att-src="image_data_uri(o.company_id.qrcode)" style="max-height: 100px;"/>
                            </div>
                        </div>
                    </div>
                </div>

            </div>


            <div class="footer" style="position:absolute;margin-bottom:30px;width:100%;">


                <div class="text-center" style="font-family: 'cool_font';">
                    <span t-esc="context_timestamp(datetime.datetime.now()).strftime('(Time: %H:%M:%S)')"/>

                    <span>Page</span>
                    <span class="page"/>
                    of
                    <span class="topage"/>

                    <span t-esc="time.strftime('(Date :%d/%m/%Y )')"/>


                </div>
            </div>

        </template>
    </data>
</openerp> 