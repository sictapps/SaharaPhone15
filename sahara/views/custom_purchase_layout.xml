<?xml version='1.0' encoding='utf-8'?>
<openerp>
    <data>
        <template id="sahara.custom_purchase_layout">
                <div class="article o_report_layout_standard" t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id">
                    <t t-call="web.address_layout"/>
                    <t t-raw="0"/>
                </div>
            <div class="header">
             <div class="row">
               <div class="col-xs-3">
               
            <!-- <img t-if="company.logo" t-att-src="'data:image/png;base64,%s' % company.logo" style="max-height: 45px;"/> -->
            <!-- All your custom code here -->
                       
                        <table style="width: 100%;">
                            <tr>
                                <td>
                                    <p style="font-family: 'cool_font';color:red;font-size:25px;" class="m-0" t-field="o.company_id.name"/>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                <span t-field="o.company_id.street"/>
                                <span t-field="o.company_id.city"/>
                                <span t-field="o.company_id.state_id"/>
                                        <!-- <address t-field="o.company_id.street"+" "+"o.company_id.city"+" "+"o.company_id.stateid" /> -->
                                </td>        
                            </tr>
                            <tr>
                                <td>
                                    TRN:<span class="m-0" t-field="o.company_id.company_registry"/>
                                </td>
                            </tr>
                            <tr>    
                                <td>
                                    Tel: <span class="m-0" t-field="o.company_id.phone"/> <!-- ,   Mob: <span class="m-0" t-field="o.company_id.mobile"/> -->
                                </td>
                            </tr>
                             <tr>    
                                <td>
                                    PO Box: <span class="m-0" t-field="o.company_id.zip"/>
                                </td>
                            </tr>
                            <tr>    
                                 <td>
                                    Mail: <span class="m-0" t-field="o.company_id.email"/>
                                </td>
                            </tr>
                        </table>

            </div>
            <div  class="col-xs-6" style="font-family: 'cool_font';width: 400px;padding-top:100px;">
                    <div>
                         <h2 style="text-align:center;">صــــــحارى فــــــون</h2>
                    </div>
                    <div>
                         <h2 style="text-align:center;">SAHARA PHONE</h2>
                    </div>
            </div>
            <div class="col-xs-3" >
                <div style="width: 100%;float:right;"> 
                    <div style="width: 45%;float:right;">
                        <img t-att-src="image_data_uri(o.company_id.logo)" style="max-height: 25px;" />
                    </div> 
                </div> 
            </div>
            </div>
            
            </div>

            <!-- <div class="footer" style="border:1px solid gray;position: relative;margin-bottom:0px !important;"> -->
            <div class="footer" style="position:absolute;margin-top:100px;width:100%;">
                
                    
            </div>    

        </template>
    </data>
</openerp> 